{
  "name": "configduino",
  "version": "1.0.0",
  "description": "A set of components for building Arduino captivate portals",
  "main": "index.js",
  "repository": "https://github.com/madpilot/configduino",
  "author": "Myles Eftos",
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir build --ignore spec.js --copy-files && cp package.json build/package.json",
    "clean": "rimraf build",
    "test": "jest --coverage",
    "test:watch": "yarn run -s test -- --watch"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "dependencies": {
    "preact": "^8.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "chai": "^4.1.2",
    "core-js": "^2.4.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.2.2",
    "jsdom": "^11.6.2",
    "preact-jsx-chai": "^2.2.1",
    "raw-loader": "^0.5.1",
    "sinon": "^4.3.0",
    "sinon-as-promised": "^4.0.3",
    "sinon-chai": "^2.9.0"
  }
}
